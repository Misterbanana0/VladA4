<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Работа_для_работы.ресурсы.Themes">
    
    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#F4C700"></Setter>
        <Setter Property="BorderBrush" Value="#8b40db"></Setter>
        <Setter Property="MinWidth" Value="120"></Setter>
        <Setter Property="Height" Value="40"></Setter>

    </Style>

    
    <Style TargetType="{x:Type Window}" x:Key="windowStyle">
        <Setter Property="Background" Value="#fffff"></Setter>
        <Setter Property="FontFamily" Value="Times New Roman"></Setter>
    </Style>

    
    <Style TargetType="{x:Type Image}" x:Key="logoImageStyle">
        <Setter Property="Source" Value="..\images\СПЕКТР.png"></Setter>
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="Height" Value="100"></Setter>
        <Setter Property="Margin" Value="10,10,0,0"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="VerticalAlignment" Value="Top"></Setter>
    </Style>
    
    
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="#Dosis"></Setter>
            <Setter Property="BorderBrush" Value="#0000"></Setter>
        </Style>
</ResourceDictionary>